<p id="notice"></p>
<h1>Books</h1>
<table>
  <tr>
    <th>title</th>
    <th>body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= @book.errors.count %> errors prohibited this book from being saved:
      </h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <% if @book.errors.any? && @book.title.blank? %>
    <div class="field">
      <div class="field_with_errors">
        <label for="book_title">Title</label>
      </div>
      <%= f.text_field :title %>
    </div>
  <% else %>
    <div class="field">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
  <% end %>
  
  <% if @book.errors.any? && @book.body.blank? %>
    <div class="field">
      <div class="field_with_errors">
        <label for="book_body">Body</label>
      </div>
      <%= f.text_area :body %>
    </div>
  <% else %>
    <div class="field">
       <label for="book_body">Body</label>
      <%= f.text_area :body %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>